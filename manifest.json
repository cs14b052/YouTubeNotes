{
  "name": "YouTubeNotes",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Toggle comment visibility on YouTube.com",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "page_action" :
  {
    "default_title" : "Toggle YouTube comments"
  },
  "permissions" : [
    "declarativeContent",
    "activeTab"
  ],
  "content_scripts":
  [
      {
          "matches": ["*://*.youtube.com/*"],
          "js": ["content.js"],
          "run_at": "document_end"
      }
  ]
}
